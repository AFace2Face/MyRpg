<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="james.peck.myrpg.MainActivity">

    <TextView
        android:id="@+id/ep"
        android:layout_width="86dp"
        android:layout_height="29dp"
        android:text="Ep 250/250"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/battleLog"
        app:layout_constraintTop_toBottomOf="@+id/battleLog" />

    <EditText
        android:id="@+id/battleLog"
        android:layout_width="308dp"
        android:layout_height="200dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/background_dark"
        android:ems="10"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="How Do You Turn This Thing On"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hp"
        android:layout_width="103dp"
        android:layout_height="29dp"
        android:text="100/100 Hp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="@+id/battleLog"
        app:layout_constraintTop_toBottomOf="@+id/battleLog" />

    <GridView
        android:id="@+id/moveList"
        android:layout_width="0dp"
        android:layout_height="218dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/nextPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />

</android.support.constraint.ConstraintLayout>
